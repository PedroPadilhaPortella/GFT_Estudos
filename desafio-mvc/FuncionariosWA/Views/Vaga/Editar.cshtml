@model FuncionariosWA.Models.Vaga
@{
    Layout = "_LayoutAdmin";
}

<h2>Cadastro de Vagas em Projetos</h2><br>
<a asp-controller="Wa" asp-action="Vagas" class="btn btn-primary btn-lg">Voltar</a>
<hr>
<form asp-controller="Vaga" asp-action="Atualizar" class="form-horizontal" method="POST">
    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Projeto">Projeto</label>
    <input class="form-control" type="text" asp-for="Projeto">
    <span asp-validation-for="Projeto"></span>
    <hr>

    <label asp-for="Descricao">Descrição da Vaga</label>
    <input class="form-control" type="text" asp-for="Descricao">
    <span asp-validation-for="Descricao"></span>
    <hr>
    
    <label asp-for="AberturaVaga">Data de Abertura da Vaga</label>
    <input class="form-control" type="date" asp-for="AberturaVaga">
    <span asp-validation-for="AberturaVaga"></span>
    <hr>
    
    <label asp-for="QuantidadeVagas">Quantidade de Vagas</label>
    <input class="form-control" type="number" asp-for="QuantidadeVagas">
    <span asp-validation-for="QuantidadeVagas"></span>
    <hr>
    
    <label asp-for="CodigoVaga">Código</label>
    <input class="form-control" type="text" asp-for="CodigoVaga">
    <span asp-validation-for="CodigoVaga"></span>
    <hr>

    @* TO DO Tecnologias *@
    
    <button type="submit" class="btn btn-success btn-lg">Atualizar Vaga</button>
</form>