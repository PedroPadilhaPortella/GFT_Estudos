@model IEnumerable<PortellaMarket.Models.Estoque>
@{
    Layout = "_LayoutAdmin";
}

<h2>Estoque</h2>
<hr>
<a asp-controller="Gestao" asp-action="NovoEstoque" class="btn btn-success">Criar Novo Estoque</a>
<a asp-controller="Gestao" asp-action="Index" class="btn btn-primary float-right btn-lg">Voltar</a>
<hr>
<table class="table table-striped table-bordered" id="estoque">
    <thead>
        <tr>
            <th>Id</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estoque in Model) {
            <tr>
                <td>@estoque.Id</td>
                <td>@estoque.Produto.Nome</td>
                <td>@estoque.Quantidade</td>
                <td>
                    <a href="/Gestao/EditarEstoque/@estoque.Id" class="btn btn-info">Editar</a>
                    <form asp-controller="Estoque" asp-action="Excluir" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@estoque.Id">
                        <button class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready( function () {
        $('#estoque').DataTable({
            "info": false,
            "language": {
                "legthMenu": "Mostrar _MENU_ registros",
                "zeroRecords": "Nenhum Registro foi encontrado...",
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum Registro Disponível",
                "search": "Buscar",
                "paginate": {
                    "first": "Primeira",
                    "last": "Última",
                    "next": "Próxima",
                    "previous": "Anterior"
                }
            }
        });
    } );
</script>