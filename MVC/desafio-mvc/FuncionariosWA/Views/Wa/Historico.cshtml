@model IEnumerable<FuncionariosWA.Models.Alocacao>
@{
    Layout = "_LayoutAdmin";
}

<h2>Histórico de Alocações</h2>
<hr>
<a asp-controller="Wa" asp-action="Alocacao" class="btn btn-success btn-lg">Realizar Alocação</a>
<a asp-controller="Wa" asp-action="Index" class="btn btn-primary float-right btn-lg">Voltar</a>
<hr>
<table class="table table-striped table-bordered" id="historico">
    <thead>
        <tr>
            <th>Id</th>
            <th>Funcionário</th>
            <th>Cliente</th>
            <th>Código da Vaga</th>
            <th>Inicio Wa</th>
            <th>Data de Alocação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Alocacao in Model) {
            <tr>
                <td>@Alocacao.Id</td>
                <td>@Alocacao.Funcionarios.Nome</td>
                <td>@Alocacao.Vagas.Projeto</td>
                <td>@Alocacao.Vagas.CodigoDaVaga</td>
                <td>@Alocacao.Funcionarios.InicioWa.ToString("dd/MM/yyyy")</td>
                <td>@Alocacao.Data.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready( function () {
        $('#historico').DataTable({
            "info": false,
            "language": {
                "legthMenu": "Mostrar _MENU_ registros",
                "zeroRecords": "Nenhum Registro foi encontrado...",
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum Registro Disponível",
                "search": "Buscar",
                "paginate": {
                    "first": "Primeira",
                    "last": "Última",
                    "next": "Próxima",
                    "previous": "Anterior"
                }
            }
        });
    } );
</script>