@model FuncionariosWA.DTO.CargoDTO
@{
    Layout = "_LayoutAdmin";
}

<h2>Cadastro de Tecnologias</h2><br>
<a asp-controller="Wa" asp-action="Cargos" class="btn btn-primary btn-lg">Voltar</a>
<hr>
<form asp-controller="Cargo" asp-action="Salvar" class="form-horizontal" method="POST">
    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Nome">Nome do Cargo</label>
    <input class="form-control" type="text" asp-for="Nome" placeholder="Ex: Analista de Sistemas">
    <span asp-validation-for="Nome"></span>
    <hr>
    
    <button type="submit" class="btn btn-success btn-lg">Adicionar</button>
</form>