@model Biblioteca.Models.Livro;

<div class="container">
    <h2>Cadastro de Livros</h2>
    <a href="/Biblioteca/Index" class="btn btn-primary">Voltar</a>

    <form class="form-horizontal" asp-controller="Biblioteca" asp-action="Salvar" method="post">
        <input type="hidden"asp-for="Id">
        Título: <input type="text" class="form-control" asp-for="Titulo" placeholder="Título">
        Autor: <input type="text" class="form-control" asp-for="Autor" placeholder="Autor">
        Editora: <input type="text" class="form-control" asp-for="Editora" placeholder="Editora">
        Total de Páginas: <input type="number" class="form-control" asp-for="QuantidadeDePaginas">
        Total de Exemplares Disponíveis: <input type="number" class="form-control" asp-for="QuantidadeDeExemplares">
        <hr>
        <button class="btn-success btn">Cadastrar</button>
    </form>
</div>