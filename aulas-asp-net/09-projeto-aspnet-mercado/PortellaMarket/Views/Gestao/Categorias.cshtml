@model IEnumerable<PortellaMarket.Models.Categoria> //Tipo de dado sendo recebido
@{
    Layout = "_LayoutAdmin"; //layout
}

<h2>Categorias</h2>
<hr>
<a asp-controller="Gestao" asp-action="NovaCategoria" class="btn btn-success">Criar Nova Categoria</a>
<a asp-controller="Gestao" asp-action="Index" class="btn btn-primary float-right btn-lg">Voltar</a>
<hr>
<table class="table table-striped tavble-bordered" id="categorias">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model) {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a href="/Gestao/EditarCategoria/@categoria.Id" class="btn btn-info">Editar</a>
                    <form asp-controller="Categorias" asp-action="Excluir" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@categoria.Id">
                        <button class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready( function () {
        $('#categorias').DataTable({
            "info": false,
            "language": {
                "legthMenu": "Mostrar _MENU_ registros",
                "zeroRecords": "Nenhum Registro foi encontrado...",
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum Registro Disponível",
                "search": "Buscar",
                "paginate": {
                    "first": "Primeira",
                    "last": "Última",
                    "next": "Próxima",
                    "previous": "Anterior"
                }
            }
        });
    } );
</script>